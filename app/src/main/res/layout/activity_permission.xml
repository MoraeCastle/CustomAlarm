<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appColor"
    tools:context=".MainActivity">
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.255" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:elevation="10dp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/permission_view_back"
        app:layout_constraintWidth_percent="0.676"
        app:layout_constraintHeight_percent="0.49"
        app:layout_constraintTop_toTopOf="@+id/guideline1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.147" />
         <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.227" />
         <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.39" />
         <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.566" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fontFamily="@font/jalnan"
            android:gravity="center"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:text="필수권한 설정"
            android:textColor="@color/black"
            app:autoSizeMaxTextSize="40dp"
            app:autoSizeMinTextSize="1dp"
            app:autoSizeTextType="uniform"
            app:layout_constraintTop_toTopOf="@+id/guideline2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.05"
            app:layout_constraintWidth_percent="0.405" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fontFamily="@font/jalnan"
            android:gravity="center"
            android:includeFontPadding="false"
            android:maxLines="2"
            android:text="이 앱을 사용하려면 필수적인 권한에 동의해야 합니다"
            android:lineHeight="17dp"
            android:textColor="@color/black"
            app:autoSizeMaxTextSize="40dp"
            app:autoSizeMinTextSize="1dp"
            app:autoSizeTextType="uniform"
            app:layout_constraintTop_toTopOf="@+id/guideline3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.065"
            app:layout_constraintWidth_percent="0.597" />

        <!--권한1-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:elevation="5dp"
            android:background="@drawable/permission_small_view_back"
            app:layout_constraintWidth_percent="0.894"
            app:layout_constraintHeight_percent="0.137"
            app:layout_constraintTop_toTopOf="@+id/guideline4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.04" />
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.255" />
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.538" />
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:elevation="5dp"
                android:background="@drawable/permission_circle_back"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintHeight_percent="0.796"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/guideline6">
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@drawable/phone_android_black"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintWidth_percent="0.627"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:fontFamily="@font/jalnan"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:text="백그라운드"
                android:lineHeight="17dp"
                android:textColor="@color/black"
                app:autoSizeMaxTextSize="40dp"
                app:autoSizeMinTextSize="1dp"
                app:autoSizeTextType="uniform"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="@+id/guideline7"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHeight_percent="0.211"
                app:layout_constraintWidth_percent="0.207" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:fontFamily="@font/jalnan"
                android:includeFontPadding="false"
                android:maxLines="2"
                android:gravity="center"
                android:text="이 앱이 종료되어도 설정한 알람이 울려야 합니다"
                android:lineHeight="17dp"
                android:textColor="#50000000"
                app:autoSizeMaxTextSize="40dp"
                app:autoSizeMinTextSize="1dp"
                app:autoSizeTextType="uniform"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="@+id/guideline8"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHeight_percent="0.383 "
                app:layout_constraintWidth_percent="0.408" />
        </androidx.constraintlayout.widget.ConstraintLayout>


        <!--권한2-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:elevation="5dp"
            android:background="@drawable/permission_small_view_back"
            app:layout_constraintWidth_percent="0.894"
            app:layout_constraintHeight_percent="0.137"
            app:layout_constraintTop_toTopOf="@+id/guideline5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.04" />
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.316" />
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.544" />
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:elevation="5dp"
                android:background="@drawable/permission_circle_back"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintHeight_percent="0.796"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/guideline9">
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@drawable/folder_open_black"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintWidth_percent="0.51"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:fontFamily="@font/jalnan"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:text="저장"
                android:lineHeight="17dp"
                android:textColor="@color/black"
                app:autoSizeMaxTextSize="40dp"
                app:autoSizeMinTextSize="1dp"
                app:autoSizeTextType="uniform"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="@+id/guideline10"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHeight_percent="0.211"
                app:layout_constraintWidth_percent="0.084" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:fontFamily="@font/jalnan"
                android:includeFontPadding="false"
                android:maxLines="3"
                android:gravity="center"
                android:text="원하는 알람음을 설정하기 위해 내부 데이터에 접근합니다"
                android:lineHeight="17dp"
                android:textColor="#50000000"
                app:autoSizeMaxTextSize="40dp"
                app:autoSizeMinTextSize="1dp"
                app:autoSizeTextType="uniform"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="@+id/guideline11"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHeight_percent="0.594 "
                app:layout_constraintWidth_percent="0.39" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/permission_okButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/permission_view_button"
            app:layout_constraintHeight_percent="0.159"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <TextView
                android:id="@+id/textView2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:fontFamily="@font/jalnan"
                android:gravity="center"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:text="동의합니다"
                android:textColor="@color/black"
                app:autoSizeMaxTextSize="40dp"
                app:autoSizeMinTextSize="1dp"
                app:autoSizeTextType="uniform"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_percent="0.275"
                app:layout_constraintWidth_percent="0.281" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>