<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_alarm_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appColor"
    tools:context=".MainActivity">
    <!--기준선-->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/line1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.025"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/line2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.077"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/line3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.986"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/line4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.056"/>


    <!--뒤로 가기-->
    <ImageView
        android:id="@+id/alarmInfo_backBtn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/arrow_back"
        android:elevation="100dp"
        app:layout_constraintTop_toTopOf="@+id/line1"
        app:layout_constraintLeft_toLeftOf="@+id/line4"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintWidth_percent="0.072" />

    <!--리스트-->
    <LinearLayout
        android:id="@+id/alarmInfo_timePickerLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/alarm_info_back"
        android:elevation="5dp"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:orientation="horizontal"
        app:layout_constraintDimensionRatio="603.3:314"
        app:layout_constraintWidth_percent="0.838"
        app:layout_constraintTop_toTopOf="@+id/line2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <NumberPicker
            android:layout_weight="5"
            android:id="@+id/alarmInfo_hourPicker"
            android:theme="@style/CustomNumberPicker"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <TextView
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text=":"
            android:textSize="35dp"
            android:textColor="@color/black"
            android:fontFamily="@font/jalnan"/>
        <NumberPicker
            android:layout_weight="5"
            android:id="@+id/alarmInfo_minutePicker"
            android:theme="@style/CustomNumberPicker"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <View
        android:id="@+id/empty01"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/alarmInfo_timePickerLayout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintDimensionRatio="603.3:16.7"
        app:layout_constraintWidth_percent="0.838"/>

    <!--알람 일정 타입-->
    <LinearLayout
        android:id="@+id/alarmInfo_selectTypeLayout"
        android:orientation="horizontal"
        android:gravity="center"
        android:elevation="5dp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/alarm_info_back"
        android:padding="15dp"
        app:layout_constraintWidth_percent="0.838"
        app:layout_constraintHeight_percent="0.099"
        app:layout_constraintTop_toBottomOf="@+id/empty01"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <Button
            android:id="@+id/alarmInfo_selectDate"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:background="@drawable/button_on"
            android:fontFamily="@font/jalnan"
            android:textSize="15dp"
            android:text="날짜"/>

        <Button
            android:id="@+id/alarmInfo_selectDayOfWeek"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_off"
            android:fontFamily="@font/jalnan"
            android:textSize="15dp"
            android:text="요일"/>
    </LinearLayout>
    <View
        android:id="@+id/empty02"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/alarmInfo_selectTypeLayout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintDimensionRatio="603.3:31.3"
        app:layout_constraintWidth_percent="0.838"/>

    <!--정보-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/alarmInfo_infoLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/alarm_info_back"
        android:elevation="5dp"
        app:layout_constraintWidth_percent="0.838"
        app:layout_constraintTop_toBottomOf="@+id/empty02"
        app:layout_constraintBottom_toBottomOf="@+id/line3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <LinearLayout
            android:id="@+id/alarmInfo_scrollView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scrollbars="none"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/alarmInfo_buttonLayout">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:id="@+id/alarmInfo_dateTitle"
                    android:layout_marginTop="5dp"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintDimensionRatio="603.3:102"
                    app:layout_constraintWidth_percent="1">
                    <LinearLayout
                        android:id="@+id/alarmInfo_choseDate"
                        android:visibility="visible"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <Button
                            android:id="@+id/alarmInfo_openDateBtn"
                            android:elevation="10dp"
                            android:background="@drawable/date_btn"
                            android:layout_width="50dp"
                            android:layout_height="50dp"/>
                        <TextView
                            android:id="@+id/alarmInfo_dateTxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:fontFamily="@font/jalnan"
                            android:textColor="@color/black"
                            android:textSize="20dp"
                            android:text="2021-04-15 (금)"/>
                    </LinearLayout>
                    <TableLayout
                        android:id="@+id/alarmInfo_choseDayOfWeek"
                        android:visibility="gone"
                        android:gravity="center"
                        android:paddingTop="5dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:stretchColumns="*"
                        android:shrinkColumns="*">
                        <TableRow
                            android:id="@+id/alarmInfo_choseDayOfWeekRow">
                            <Button
                                android:id="@+id/alarmInfo_day01"
                                android:stateListAnimator="@null"
                                android:background="@drawable/day_btn"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_marginRight="5dp"
                                android:text="일"
                                android:padding="5dp"
                                android:autoSizeTextType="uniform"
                                android:autoSizeMaxTextSize="30dp"
                                android:autoSizeMinTextSize="5dp"
                                android:fontFamily="@font/jalnan"
                                android:textColor="#FF0000"/>
                            <Button
                                android:id="@+id/alarmInfo_day02"
                                android:stateListAnimator="@null"
                                android:background="@drawable/day_btn"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_marginRight="5dp"
                                android:text="월"
                                android:padding="5dp"
                                android:autoSizeTextType="uniform"
                                android:autoSizeMaxTextSize="30dp"
                                android:autoSizeMinTextSize="5dp"
                                android:fontFamily="@font/jalnan"
                                android:textColor="@color/black" />
                            <Button
                                android:id="@+id/alarmInfo_day03"
                                android:stateListAnimator="@null"
                                android:background="@drawable/day_btn"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_marginRight="5dp"
                                android:text="화"
                                android:padding="5dp"
                                android:autoSizeTextType="uniform"
                                android:autoSizeMaxTextSize="30dp"
                                android:autoSizeMinTextSize="5dp"
                                android:fontFamily="@font/jalnan"
                                android:textColor="@color/black"
                                app:layout_constraintTop_toTopOf="parent"/>
                            <Button
                                android:id="@+id/alarmInfo_day04"
                                android:stateListAnimator="@null"
                                android:background="@drawable/day_btn"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_marginRight="5dp"
                                android:text="수"
                                android:padding="5dp"
                                android:autoSizeTextType="uniform"
                                android:autoSizeMaxTextSize="30dp"
                                android:autoSizeMinTextSize="5dp"
                                android:fontFamily="@font/jalnan"
                                android:textColor="@color/black"/>
                            <Button
                                android:id="@+id/alarmInfo_day05"
                                android:stateListAnimator="@null"
                                android:background="@drawable/day_btn"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_marginRight="5dp"
                                android:text="목"
                                android:padding="5dp"
                                android:autoSizeTextType="uniform"
                                android:autoSizeMaxTextSize="30dp"
                                android:autoSizeMinTextSize="5dp"
                                android:fontFamily="@font/jalnan"
                                android:textColor="@color/black"/>
                            <Button
                                android:id="@+id/alarmInfo_day06"
                                android:stateListAnimator="@null"
                                android:background="@drawable/day_btn"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_marginRight="5dp"
                                android:text="금"
                                android:padding="5dp"
                                android:autoSizeTextType="uniform"
                                android:autoSizeMaxTextSize="30dp"
                                android:autoSizeMinTextSize="5dp"
                                android:fontFamily="@font/jalnan"
                                android:textColor="@color/black"/>
                            <Button
                                android:id="@+id/alarmInfo_day07"
                                android:stateListAnimator="@null"
                                android:background="@drawable/day_btn"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_marginRight="5dp"
                                android:text="토"
                                android:padding="5dp"
                                android:autoSizeTextType="uniform"
                                android:autoSizeMaxTextSize="30dp"
                                android:autoSizeMinTextSize="5dp"
                                android:fontFamily="@font/jalnan"
                                android:textColor="#0043ff"/>
                        </TableRow>
                    </TableLayout>
                </LinearLayout>
                <View
                    android:id="@+id/empty03"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="#d0d0d0"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/alarmInfo_dateTitle"
                    app:layout_constraintDimensionRatio="466:0.7"
                    app:layout_constraintWidth_percent="0.772"/>
                <View
                    android:id="@+id/empty04"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@null"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/alarmInfo_dateTitle"
                    app:layout_constraintDimensionRatio="466:10"
                    app:layout_constraintWidth_percent="0.772"/>

                <!--내용-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toBottomOf="@+id/empty04"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent">
                    <LinearLayout
                        android:gravity="center"
                        android:padding="20dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <!--알람 이름-->
                        <LinearLayout
                            android:layout_weight="1"
                            android:id="@+id/alarmInfo_alarmNameLayout"
                            android:gravity="center"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:adjustViewBounds="true"
                                android:background="#00FFFFFF"
                                android:scaleType="fitCenter"
                                android:src="@drawable/edit_img"
                                android:padding="10dp"/>
                            <EditText
                                android:id="@+id/alarmInfo_alarmNameEdit"
                                android:layout_marginLeft="20dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:src="@drawable/edit_img"
                                android:hint="알람 이름"
                                android:textSize="15dp"/>
                        </LinearLayout>

                        <!--알람음-->
                        <LinearLayout
                            android:layout_weight="1"
                            android:id="@+id/alarmInfo_alarmRingLayout"
                            android:gravity="center"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <ImageButton
                                android:id="@+id/alarmInfo_alarmRingBtn"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:adjustViewBounds="true"
                                android:background="#00FFFFFF"
                                android:scaleType="fitCenter"
                                android:src="@drawable/notifications_black"
                                android:padding="10dp"/>
                            <TextView
                                android:id="@+id/alarmInfo_alarmRingTxt"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="20dp"
                                android:src="@drawable/edit_img"
                                android:gravity="center"
                                android:text="알람 선택"
                                android:textSize="15dp"/>
                        </LinearLayout>

                        <!--알람음-->
                        <LinearLayout
                            android:layout_weight="1"
                            android:id="@+id/alarmInfo_alarmCallLayout"
                            android:gravity="center"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <ImageButton
                                android:id="@+id/alarmInfo_alarmCallBtn"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:src="@drawable/call_img"
                                android:padding="10dp"
                                android:adjustViewBounds="true"
                                android:background="#00FFFFFF"
                                android:scaleType="fitCenter"/>
                            <TextView
                                android:id="@+id/alarmInfo_alarmCallTxt"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="20dp"
                                android:src="@drawable/edit_img"
                                android:gravity="center"
                                android:text="진동 패턴 선택"
                                android:textSize="15dp" />
                        </LinearLayout>

                        <!--알람음-->
                        <LinearLayout
                            android:layout_weight="1"
                            android:id="@+id/alarmInfo_alarmReCallLayout"
                            android:gravity="center"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <ImageButton
                                android:id="@+id/alarmInfo_alarmReCallBtn"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:src="@drawable/autorenew_black"
                                android:padding="10dp"
                                android:adjustViewBounds="true"
                                android:background="#00FFFFFF"
                                android:scaleType="fitCenter"/>
                            <TextView
                                android:id="@+id/alarmInfo_alarmReCallTxt"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="20dp"
                                android:src="@drawable/edit_img"
                                android:gravity="center"
                                android:text="반복 선택"
                                android:textSize="15dp"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/alarmInfo_buttonLayout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/alarm_info_bottom"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/alarmInfo_scrollView"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHeight_percent="0.13">
            <Button
                android:id="@+id/alarmInfo_saveBtn"
                android:layout_weight="1"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="15dp"
                android:textColor="#99000000"
                android:fontFamily="@font/jalnan"
                android:text="저장"/>
            <View
                android:layout_width="1dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_height="match_parent"
                android:background="#88000000"/>
            <Button
                android:id="@+id/alarmInfo_cancelBtn"
                android:layout_weight="1"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="#99000000"
                android:textSize="15dp"
                android:fontFamily="@font/jalnan"
                android:text="취소"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!--달력-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/alarmInfo_subLayout"
        android:visibility="gone"
        android:elevation="50dp"
        android:clickable="true"
        android:background="#90000000"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <androidx.constraintlayout.widget.Guideline
            android:id="@id/line9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.15"/>
        <LinearLayout
            android:id="@+id/alarmInfo_datePickerLayout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center|top"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="@+id/line9"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintWidth_percent="0.9">
            <DatePicker
                android:id="@+id/alarmInfo_datePicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>
            <Button
                android:id="@+id/alarmInfo_saveDateBtn"
                android:layout_width="200dp"
                android:layout_height="65dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/button_off"
                android:fontFamily="@font/jalnan"
                android:textSize="20dp"
                android:text="저장하기"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>